<%- model_class = Show -%>
<div class="page-header">
  <h1><%=t '.title', :default => @show.name %></h1>
  <h3><small><%= link_to @show.url %></small></h3>
  <div class="btn-group">
    <button class="btn btn-mini dropdown-toggle" data-toggle="dropdown">Options<span class="caret"></span></button>
    <ul class="dropdown-menu">
      <li>  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_show_path(@show) %></li>
      <li>  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              show_path(@show),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %></li>
    </ul>
  </div>
</div>

<ul class="thumbnails">
  <% @show.episodes.each do |episode| %>
  <li class="span3">
    <a href="<%= episode.url %>" class="thumbnail">
        <h4><%= episode.name %></h3>
        <p>Episode: <%= episode.number %></p>
        <p>Posted: <%= episode.created_at.strftime('%m/%d/%Y') %></p>
    </a>
  </li>
  <% end %>
</ul>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              shows_path, :class => 'btn'  %>
</div>
