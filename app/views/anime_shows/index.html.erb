<%- model_class = AnimeShow -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<div class="row-fluid">
            <ul class="thumbnails">
              <% @anime_shows.each do |anime_show| %>
                <li class="span4">
                  <div class="thumbnail">
                    <%= link_to anime_show_path(anime_show) do %>
                      <img data-src="holder.js/300x200" alt="300x200" style="width: 300px; height: 200px;" src="">
                    <% end -%>
                    <div class="caption">
                      <span class="label label-inverse"><%= anime_show.episodes.count %> Episodes</span>
                      <h3><%= anime_show.name %></h3>
                      <p><%= truncate(anime_show.description, :length => 100) %></p>
                      <!-- <p><a href="#" class="btn btn-primary">Action</a> <a href="#" class="btn">Action</a></p> -->
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>

<%= link_to 'Add a show',
            new_anime_show_path,
            :class => 'btn btn-primary' %>
