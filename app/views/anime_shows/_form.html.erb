<%= form_for @anime_show, :html => { :class => 'form-inline' } do |f| %>
  <div class="control-group">
    <div class="input-prepend">
      <span class="add-on">Website URL:</span>
      <%= f.text_field :url, :class => 'text_field', :id => 'prependedInput' %>
    </div>
  </div>
  <div class="control-group">
    <div class="input-prepend">
      <span class="add-on">Show Name:</span>
      <%= f.text_field :name, :class => 'text_field', :id => 'prependedInput' %>
    </div>
  </div>
  <div class="control-group">
    <div class="input-prepend">
      <span class="add-on">Image URL:</span>
      <%= f.text_field :image_url, :class => 'text_field', :id => 'prependedInput' %>
    </div>
  </div>
  <div class="control-group">
      <%= f.text_area :description, :columns => '500', :class => 'input-xxlarge', :placeholder => "Description" %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                anime_show_path(@anime_show),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                anime_shows_path, :class => 'btn' %>
  </div>
<% end %>
