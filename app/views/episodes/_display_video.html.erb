<% if @episode.video.exists? %>
    <%= render :partial => 'video_player', :locals => {:video_url => @episode.video.url } %>
<% elsif @episode.video_file.present? %>
    <%= render :partial => 'video_player', :locals => {:video_url => @episode.video_file} %>
<% else %>
  <%= render 'nw_anime_iframe' %>
<% end -%>