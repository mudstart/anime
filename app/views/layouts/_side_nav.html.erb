<div class="span3" id="side_well">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header">Your Shows</li>
      <% if anime_show_subscriptions.empty? %>
        <li><strong><%= link_to 'Find Some Shows', anime_shows_path, :class => '' %></li></strong>
      <% else %>
        <% anime_show_subscriptions.each do |anime| %>
          <li>
            <span>
              <%= new_indicator(anime) %>
              <%= link_to truncate(anime.name, :length => 15), anime  %>
            </span>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div><!--/.well -->
</div><!--/span-->